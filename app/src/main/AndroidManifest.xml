<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theporouscity.flagging">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- TODO enable backup for release -->
    <application
        android:name=".FlaggingApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityMainTabs"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ViewBoardActivity" />
        <activity
            android:name=".ViewThreadActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewMessageActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AddEditAccountActivity" />
        <activity
            android:name=".ThreadReplyActivity"
            android:label="@string/title_activity_thread_reply"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>