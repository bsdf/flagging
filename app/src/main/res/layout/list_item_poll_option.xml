<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/constraintLayout">

    <TextView
        android:text="This is a poll option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textAlignment="gravity"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextPrimary"
        android:id="@+id/list_item_poll_option_text"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/list_item_poll_option_vote_count"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>

    <TextView
        android:text="2 votes"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textAlignment="gravity"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorTextSecondary"
        android:id="@+id/list_item_poll_option_vote_count"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"/>

</android.support.constraint.ConstraintLayout>