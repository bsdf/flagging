<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_thread_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.theporouscity.flagging.ThreadReplyActivity"
    tools:showIn="@layout/activity_thread_reply">

    <TextView
        android:id="@+id/reply_thread_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="asdf afsd sfa sdf dsfasdf asdf asdfa sdfa sdf asdf asdf asdf asdfasfd asdf afsd sfa sdf dsfasdf asdf asdfa sdfa sdf asdf asdf asdf asdfasfd " />

    <EditText
        android:id="@+id/reply_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reply_thread_name"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:gravity="top|start"
        android:hint="@string/thread_reply_text_hint"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false" />
</RelativeLayout>
