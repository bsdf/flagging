<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="50dp"
                                             android:paddingLeft="16dp"
                                             android:paddingRight="16dp"
                                             android:paddingTop="4dp"
                                             android:paddingBottom="4dp"
                                             android:id="@+id/constraintLayout">


    <TextView
        android:text="The Canonical List of Overheated ILM Race Relation Threads"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:lines="2"
        android:gravity="left"
        android:textAlignment="gravity"
        android:textColor="@color/colorTextPrimary"
        android:id="@+id/list_item_thread_title_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/list_item_thread_date_text_view"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>

    <TextView
        android:text="00:00 22 Nov 14"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="@color/colorTextSecondary"
        android:id="@+id/list_item_thread_date_text_view"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"/>

</android.support.constraint.ConstraintLayout>