<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingLeft="16dp"
                                             android:paddingRight="16dp"
                                             android:paddingTop="12dp"
                                             android:paddingBottom="12dp"
                                             android:minHeight="54dp"
                                             android:background="?android:attr/selectableItemBackground"
                                             android:id="@+id/constraintLayout"> <!-- TODO why doesn't minHeight work -->


    <TextView
        android:text="The Canonical List of Overheated ILM Race Relation Threads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="gravity"
        android:id="@+id/list_item_thread_title_text_view"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="16dp"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/list_item_thread_date_text_view"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"/>

    <TextView
        android:text="00:00 22 Nov 14"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAlignment="gravity"
        android:textColor="@color/colorTextSecondary"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:id="@+id/list_item_thread_date_text_view"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"/>

</android.support.constraint.ConstraintLayout>