<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/fragment_view_message_relativelayout"
              android:background="@color/background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true"
                  android:layout_width="match_parent"
                  android:layout_height="48dp"
                  android:background="@color/background"
                  android:id="@+id/fragment_view_message_button_bar"
                  android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SEND"
            style="@style/FlatButton"
            android:id="@+id/fragment_view_message_send_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BROWSER"
            style="@style/FlatButton"
            android:id="@+id/fragment_view_message_view_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BOOKMARK"
            style="@style/FlatButton"
            android:id="@+id/fragment_view_message_bookmark_textview"/>

    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/fragment_view_message_button_bar"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/fragment_view_message_webview"/>

</RelativeLayout>